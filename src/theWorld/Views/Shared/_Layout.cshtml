<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The World - @ViewBag.Title </title>

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div id="sidebar">
        <img src="~/images/CityLights.jpg" alt="Lights" class="Lights" />
        <span id="username">Greg Harlock</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="showsidebar">Hide Menu</button>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>

        <div id="footer">
            &copy; 2015 The World Ltd.
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/jscript/site.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>